<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
    <script src="./main.js"></script>
</head>
<body>
  <div class="container mt-3">
    <div class="jumbotron">
      <h1 style="color:blue">Ingrese Producto</h1>
      <br>
            <form action="/productos" method="post">
              <div class="form-group">
               <label for="nombre"><b>Nombre</b></label> 
               <input id="nombre" class="form-control" type="text" name="nombre">
              </div>
              <div class="form-group">
                <label for="Precio"><b>Precio</b></label> 
                <input id="Precio" class="form-control" type="text" name="Precio">
               </div>
               <div class="form-group">
                <label for="fotoURL"><b>Foto URL</b></label> 
                <input id="fotoURL" class="form-control" type="text" name="fotoURL">
               </div>
               <button class="btn btn-success mt-3 mb-5">Enviar</button>
            </form>

    </div>
  </div>
   <div class="container mt-3">
    <div class="jumbotron">
        <h2 style="color:crimson;">Productos</h2>
        {{#if productos}}
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: yellow"><th>Nombre</th><th>Precio</th><th>Imagen</th></tr>
                    {{#each productos}}
                    <tr>
                        <td>{{this.nombre}}</td>
                        <td>${{this.Precio}}</td>
                        <td><img src="{{this.fotoURL}}" style="max-height:30px"></td>
                    </tr>
                   {{/each}}
                </table>
            </div>
         {{else}}
                    <h3 class="alert alert-danger">no se encontraron datos </h3>
        {{/if}}
    </div>
  </div>
  
    <div class="container mt-3">
    <div class="jumbotron">
    <h1 style="color:blue">Centro de mensajes</h1>
    
    <form onsubmit="return addMessage(this)" >
        <input type="text" id="username" placeholder="Tu Nombre" >
         <div id="messages" class="container mt-3">
       
          </div>
        <input type="text" id="texto" placeholder="CuÃ©ntanos algo...">
        <input type="submit" value="Enviar">
    </form>
    </div>
    </div>
</body>



</html>

